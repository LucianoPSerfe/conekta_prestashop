<?xml version="1.0"?>
<ruleset name="Magento2InternalStandard">
  <description>Magento 2 Monin Coding Standard</description>
  <file>./dev/composer-dev/linio-merchant-integration/</file>
  <!-- Arguments -->
  <arg name="colors" />
  <arg value="sp" />

  <!-- Ignored files -->
  <exclude-pattern>vendor</exclude-pattern>
  <exclude-pattern>*.min.js</exclude-pattern>
  <exclude-pattern>*.min.css</exclude-pattern>
  <exclude-pattern>*.test.js</exclude-pattern>
  <exclude-pattern>*.js</exclude-pattern>

  <!-- Reports generation -->
  <arg name="report-full" value="var/log/mqt/full.txt" />
  <arg name="report-summary" value="var/log/mqt/summary.txt" />
  <!--
 Cannot use this report as the .git dir is not available on docker
-->
  <arg name="report-gitblame" value="var/log/mqt/blame.txt"/>
  <arg name="report-info" value="var/log/mqt/info.txt"/>
  <arg name="report-code" value="var/log/mqt/code.txt"/>
  <arg name="report-width" value="1000"/>


  <rule ref="Magento2" />

  <rule ref="Generic.ControlStructures.InlineControlStructure.NotAllowed">
    <exclude name="Generic.ControlStructures.InlineControlStructure.NotAllowed"/>
  </rule>
  <!--  Include some documentation required methods  -->
  <rule ref="Squiz">
    <exclude name="Squiz.WhiteSpace.FunctionSpacing.BeforeFirst"/>
    <exclude name="Squiz.Files.FileExtension.ClassFound"/>
    <exclude name="Squiz.Commenting.FileComment.MissingPackageTag"/>
    <exclude name="Squiz.Commenting.ClosingDeclarationComment.Missing"/>
    <exclude name="Squiz.Commenting.InlineComment.InvalidEndChar"/>
    <exclude name="Squiz.Operators.ComparisonOperatorUsage.ImplicitTrue"/>
    <exclude name="Squiz.WhiteSpace.FunctionClosingBraceSpace.SpacingBeforeClose"/>
    <exclude name="Generic.Commenting.DocComment.ShortNotCapital"/>
    <exclude name="Squiz.NamingConventions.ValidVariableName.MemberNotCamelCaps"/>
    <exclude name="Squiz.WhiteSpace.FunctionSpacing.Before"/>
    <exclude name="Generic.Formatting.MultipleStatementAlignment.NotSame"/>
    <exclude name="Squiz.Strings.ConcatenationSpacing.PaddingFound"/>
    <exclude name="Squiz.Operators.ComparisonOperatorUsage.NotAllowed"/>
    <exclude name="Generic.Commenting.DocComment.ParamGroup"/>
    <exclude name="Squiz.Commenting.FunctionComment.ParamCommentFullStop"/>
    <exclude name="Squiz.Commenting.FunctionComment.ParamCommentNotCapital"/>
    <exclude name="Generic.Commenting.DocComment.NonParamGroup"/>
    <exclude name="Generic.Commenting.DocComment.TagValueIndent"/>
    <exclude name="Squiz.Commenting.FunctionComment.SpacingAfterParamType"/>
    <exclude name="Squiz.WhiteSpace.FunctionSpacing.After"/>
    <exclude name="Squiz.NamingConventions.ValidVariableName.PrivateNoUnderscore"/>
    <exclude name="Squiz.PHP.DisallowComparisonAssignment.AssignedComparison"/>
    <exclude name="Squiz.Commenting.InlineComment.DocBlock"/>
    <exclude name="Squiz.NamingConventions.ValidVariableName.NotCamelCaps"/>
    <exclude name="Squiz.Commenting.FunctionComment.MissingParamComment"/>
    <exclude name="Squiz.PHP.DisallowInlineIf.Found"/>
    <exclude name="Squiz.Commenting.InlineComment.NotCapital"/>
    <exclude name="Squiz.Commenting.ClassComment.TagNotAllowed"/>
    <exclude name="Squiz.NamingConventions.ValidFunctionName.PublicUnderscore"/>
    <exclude name="Squiz.Arrays.ArrayDeclaration.KeyNotAligned"/>
    <exclude name="Squiz.Arrays.ArrayDeclaration.CloseBraceNotAligned"/>
    <exclude name="Squiz.NamingConventions.ValidFunctionName.PrivateNoUnderscore"/>
    <exclude name="Squiz.Commenting.FunctionComment.TypeHintMissing"/>
    <exclude name="Squiz.Commenting.FunctionComment.ThrowsNoFullStop"/>
    <exclude name="Squiz.Commenting.LongConditionClosingComment.Missing"/>
    <exclude name="Generic.Commenting.DocComment.SpacingBeforeTags"/>
    <!--  this one conflicts with Magento one  -->
    <exclude name="Squiz.ControlStructures.ElseIfDeclaration.NotAllowed"/>
    <exclude name="Squiz.WhiteSpace.ObjectOperatorSpacing.Before"/>
    <exclude name="Generic.Commenting.DocComment.MissingShort"/>
    <exclude name="Squiz.PHP.DisallowComparisonAssignment.AssignedBool"/>
    <exclude name="Squiz.NamingConventions.ValidVariableName.PublicHasUnderscore"/>
    <exclude name="Squiz.Commenting.FunctionComment.ScalarTypeHintMissing"/>
    <exclude name="Squiz.ControlStructures.SwitchDeclaration.BreakIndent"/>
    <exclude name="Squiz.Commenting.FunctionComment.EmptyThrows"/>
    <!--
     allows inline comments like /** @var \Magento\Cms\Model\Block $block */
    -->
    <exclude name="Squiz.Commenting.BlockComment.WrongStart"/>
    <exclude name="Generic.Commenting.DocComment.ContentAfterOpen"/>
    <exclude name="Generic.Commenting.DocComment.ContentBeforeClose"/>
    <!--
     Not required function as they are java related  or Squiz company specific rules
    -->
    <exclude name="Squiz.Commenting.FileComment.PackageTagOrder"/>
    <exclude name="Squiz.Commenting.FileComment.SubpackageTagOrder"/>
    <exclude name="Squiz.Commenting.FileComment.MissingSubpackageTag"/>
    <exclude name="Squiz.Commenting.FileComment.MissingAuthorTag"/>
    <exclude name="Squiz.Commenting.FileComment.IncorrectCopyright"/>
    <exclude name="Squiz.Commenting.FileComment.IncorrectAuthor"/>
    <exclude name="Squiz.Commenting.FileComment.AuthorTagOrder"/>
    <!--  Avoids problem with the JS with this rules  -->
    <exclude-pattern>*.js</exclude-pattern>
    <!--  Excludes heredor usage  -->
    <exclude name="Squiz.PHP.Heredoc.NotAllowed"/>
    <exclude name="Squiz.ControlStructures.InlineIfDeclaration.NoBrackets"/>
    <exclude name="Squiz.Commenting.BlockComment.SingleLine"/>
    <!--  Contradics PSR2  -->
    <exclude name="Squiz.WhiteSpace.FunctionSpacing.AfterLast"/>
    <exclude name="Squiz.WhiteSpace.MemberVarSpacing.FirstIncorrect"/>
    <exclude name="PSR2.Methods.MethodDeclaration.Underscore" />
  </rule>
</ruleset>
