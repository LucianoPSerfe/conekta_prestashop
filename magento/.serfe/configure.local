#!/usr/bin/env bash
set -e
echo "Import local configuration";
bin/magento app:config:import
echo "Setup upgrade to detect local modules";
bin/magento setup:upgrade
echo "Configuring local urls";
bin/magento config:set web/secure/base_url "https://linio.magento.ws.serfe.com/"
bin/magento config:set web/unsecure/base_url "https://linio.magento.ws.serfe.com/"
echo "Set developer mode";
bin/magento deploy:mode:set developer && true
echo "Cache clean";
bin/magento cache:clean
echo "Regenerating admin users";
./.serfe/magerun admin:user:delete $(./.serfe/magerun admin:user:list --skip-root-check | egrep info@serfe.com | cut -d "|" -f3) -f -q --skip-root-check
./.serfe/magerun admin:user:create --admin-user=admin --admin-password="s3rf3ntr4nd0" --admin-email="info@serfe.com" --admin-firstname="Admin Serfe" --admin-lastname=User --skip-root-check
echo "all set ready to go";
